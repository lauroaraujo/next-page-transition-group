{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./lib",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "ES6",
    "moduleResolution": "node",
    "jsx": "preserve",
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/PageTransition.tsx"
  ]
}
